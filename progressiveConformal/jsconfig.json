{
    "compilerOptions": {
        "checkJs": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "path": {
            "*": ["node_modules/*", "src/*"],
            "*.frag": ["src/shaders/*.frag"],
            "*.vert": ["src/shaders/*.vert"]
        },
        "types": ["vite/client"]
    },
    "include": ["src/**/*"],
    "exclude": ["**/*~", "**/node_modules", "**/.git"]
}
